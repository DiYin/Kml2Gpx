<Window x:Class="Mega.Kml2Gpx.Wpf.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mega.Kml2Gpx.Wpf.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="168"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Name="labelFile" Content="KML/KMZ File:" HorizontalAlignment="Left" Margin="15,30,0,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="textBoxFile" HorizontalAlignment="Left" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="550" Height="30"/>
        <Button Grid.Row="0" Grid.Column="2" Name="buttonBroseFile" Content="..." HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Center" Width="30" Height="30" />
        <Label Grid.Row="1" Grid.Column="0" Name="labelFolder" Content="Output Folder:" HorizontalAlignment="Left" Margin="15,30,0,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="textBoxFolder" HorizontalAlignment="Left" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="550" Height="30"/>
        <Button Grid.Row="1" Grid.Column="2" Name="ButtonFolder" Content="..." HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Center" Width="30" Height="30" />
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Comverter" HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Center"/>
            <Label Grid.Row="0" Grid.Column="1" Content="Output File" HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Center"/>
            <local:CheckedListBox Grid.Row="1" Grid.Column="0" Name="checkedListBoxConverter" ItemsSource="{Binding Items}" />
            <local:CheckedListBox Grid.Row="1" Grid.Column="1" Name="checkedListBoxOutputFile" ItemsSource="{Binding Items}" />
        </Grid>
    </Grid>
</Window>
